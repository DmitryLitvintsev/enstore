<?xml version='1.0'?>
<!DOCTYPE NGOPConfig SYSTEM "system.dtd">
<NGOPConfig>
<ClusterList Name="FERMI">
<Cluster Name="STKEN"/>
<Cluster Name="D0EN"/>
</ClusterList>
<For Each="Cluster" Var="{%F}" In="ClusterList" Name="FERMI">
<System Name="Ping" Cluster="{%F}">
    <For Each="Host" Var="{%Host}" In="Cluster" Name="{%F}" Filename="fermi_hosts.xml">
   	  <MonitoredElement Name="ping"  Host="{%Host}" Type="Hardware"/>
    </For>
</System>
</For>
</NGOPConfig>
