<?xml version='1.0'?>
<!DOCTYPE NGOPConfig SYSTEM "system.dtd">
<NGOPConfig>
<ItemList Name="ENSTORE">
  <Item Name="STK"/>
  <Item Name="D0"/>
</ItemList>
<For Each="Item" In="ItemList" Name="ENSTORE" Var="{%S}">
<For Each="Host" In="Cluster" Name="{%S}EN" Var="{%H}" Filename="fermi_hosts.xml">
  <System Name="Hardware" Cluster="{%H}">
     <MonitoredElement Name="numProcessors" Type="Hardware" Host="{%H}"/>
     <MonitoredElement Name="baseTemp"      Type="Hardware" Host="{%H}"/>
     <MonitoredElement Name="fanSpeed"      Type="Hardware" Host="{%H}"/>
  </System> 
</For>
</For>
</NGOPConfig>

