<?xml version='1.0'?>
<!DOCTYPE NGOPConfig SYSTEM "system.dtd">
<NGOPConfig>
<ItemList Name="ENSTORE">
  <Item Name="STK"/>
  <Item Name="D0"/>
</ItemList>
<For Each="Item" In="ItemList" Name="ENSTORE" Var="{%S}">
<For Each="Host" In="Cluster" Name="{%S}EN" Var="{%H}" Filename="fermi_hosts.xml">
  <System Name="OSHealth" Cluster="{%H}">
     <MonitoredElement Name="inetd"   Type="Daemon"     Host="{%H}"/>
     <MonitoredElement Name="crond"   Type="Daemon"     Host="{%H}"/>
     <MonitoredElement Name="timeSync" Type="Daemon"    Host="{%H}"/>
     <MonitoredElement Name="syslogd" Type="Daemon"     Host="{%H}"/>
     <MonitoredElement Name="/home"   Type="FileSystem" Host="{%H}"/>
     <MonitoredElement Name="cpuLoad" Type="sysUsage"   Host="{%H}"/>
     <MonitoredElement Name="Memory"  Type="sysUsage"   Host="{%H}"/>
     <MonitoredElement Name="Swap"    Type="sysUsage"   Host="{%H}"/>
  </System>
  </For>
</For>
</NGOPConfig>

