<MA-config Update="180" Name="LocalCronEnstore" Type="Daemon">
   <NCS Heartbeat="300" Port="19997" Host="ngop.fnal.gov"/>
   <System Name="Cronjob" Cluster="localhost">
      <MonitoredElement Name="enstore" Host="localhost" Type="Daemon">
         <ConditionSet>
         <fn Name="checkcron" Arg="enstore" RetVal="int:x"/>
         <Condition State="0" SevLevel="0" Description="enstore cron job has been running 3 times longer than normal interval">
            <apply>
               <apply>
                  <eq/>
                  <ci>x</ci>
                  <cn>-2</cn>
               </apply>
            </apply>
         </Condition>
        <Condition State="-2" SevLevel="0" Description="enstore cron job info is not available">
            <apply>
               <apply>
                  <eq/>
                  <ci>x</ci>
                  <cn>-1</cn>
               </apply>
            </apply>
         </Condition>
         <Condition State="1" SevLevel="0" Description="enstore cron job works well">
            <apply>
               <apply>
                  <eq/>
                  <ci>x</ci>
                  <cn>0</cn>
               </apply>
            </apply>
         </Condition> 
         </ConditionSet>
      </MonitoredElement>

      <MonitoredElement Name="root" Host="localhost" Type="Daemon">
         <ConditionSet>
         <fn Name="checkcron" Arg="root" RetVal="int:x"/>
         <Condition State="0" SevLevel="0" Description="root cron job has been running 3 times longer than normal interval">
            <apply>
               <apply>
                  <eq/>
                  <ci>x</ci>
                  <cn>-2</cn>
               </apply>
            </apply>
         </Condition>
        <Condition State="-2" SevLevel="0" Description="root cron job info is not available">
            <apply>
               <apply>
                  <eq/>
                  <ci>x</ci>
                  <cn>-1</cn>
               </apply>
            </apply>
         </Condition>
         <Condition State="1" SevLevel="6" Description="root cron job has been running for 2 times longer than normal interval">
            <apply>
               <apply>
                  <eq/>
                  <ci>x</ci>
                  <cn>1</cn>
               </apply>
            </apply>
         </Condition>
         </ConditionSet>
      </MonitoredElement>
   </System>
</MA-config>

