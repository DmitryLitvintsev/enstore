  <function name="data_transfer" arguments="timestamp" returns="ts" language="sql">
select
        storage_group,
        sum(size)::bigint as total,
        sum(case
                when rw = 'r' then size
                else 0
        end)::bigint as read,
        sum(case
                when rw = 'w' then size
                else 0
        end)::bigint as write
from
        encp_xfer
where
        date &gt;= $1::timestamp
group by storage_group
order by storage_group;
  </function>
