    (sleep 2;enstore mover --alive DM07AIT.mover;           if [ $? -ne 0 ]; then echo DM07AIT.MOVER DEAD;         else echo dm07ait.mover alive;         fi) &
    (sleep 2;enstore mover --alive DM08AIT.mover;           if [ $? -ne 0 ]; then echo DM08AIT.MOVER DEAD;         else echo dm08ait.mover alive;         fi) &
