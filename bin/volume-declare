oldifs="$IFS"
IFS="
"
newifs="$IFS"

# Delete all the old volumes, just in case they are already defined
for vol in ${volumes_del}; do
  IFS=$oldifs
  vol=`echo $vol`
  if [ "${vol}x" != "x" ] ; then
    echo ecmd delvol $vol
         ecmd delvol $vol
    if [ $? != 0 ] ; then echo \'ERROR\'; fi
  fi
  IFS=$newifs
done

# Declare some new volumes
for vol in $volumes; do
  IFS=$oldifs
  vol=`echo $vol`
  if [ "${vol}x" != "x" ] ; then
    echo ecmd addvol $vol
         ecmd addvol $vol
    if [ $? != 0 ] ; then echo \'ERROR\'; fi
  fi
  IFS=$newifs
done

IFS="$oldifs"
