#!/bin/sh
if [ "${1:-}" = "-x" ] ; then set -xv; shift; fi
set -u  # force better programming and ability to use check for not set

if [ -z "${1-}" ] ; then echo usage $0 pid-file; exit 1; fi

if [ ! -r $1 ] ; then exit; fi

echo Stopping `basename $1 | sed -e 's/_pids$//'`

cat $1 | while read pid; do
    if [ `ps -p $pid 2>&1 | grep -c $pid` -ne 0 ]; then 
      kill -9 $pid
      cnt=0
      max=3
      while [ $cnt -le $max ]; do
        if [ `ps -p $pid 2>&1 | grep -c $pid` -eq 0 ]; then 
	  break
	elif [ $cnt -eq $max ]; then
          echo "ERROR: Process $pid STILL LIVES" 
	  break
        fi
	sleep 1
	cnt=`expr $cnt + 1`
      done
    fi
done

rm -f $1
