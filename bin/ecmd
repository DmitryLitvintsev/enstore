#!/bin/sh

if [ "${1:-}" = "-x" ] ; then set -xv; shift; fi
set -u  # force better programming and ability to use check for not set

. $ENSTORE_DIR/bin/defaults

usage="
ecmd start   (no options/arguments)
ecmd stop    (no options/arguments)

ecmd encp    [--config_list --list --help ] inputfilename outputfilename

ecmd config  [--config_list --config_file=  --dict --load --list --alive --help ]
ecmd fcc     [--config_list --bfids --bfid= --list --alive --help ]
ecmd vcc     [--config_list --vols  --vol=  --list --alive --help ']
ecmd lmc     [--config_list --printwork     --list --alive --help '] library
ecmd mcc     [--config_list -list --alive --help ']  media_changer volume drive

ecmd vols    [--config_list --list --help']

ecmd vol    external_label [--config_list --list --help']

ecmd addvol  [--config_list --vols  --vol=  --list --help'] library file_family
             media_type  volume_name, volume_byte_capacity remaining_capacity
ecmd delvol  [--config_list --vols  --vol=  --list --help'] volume_name

ecmd pnfs    [--test --status --file= --list --help]

ecmd rawdriver-test [--size= --device= --eod_cookie= --list --help]
ecmd callback       (no options/arguments)
ecmd udp-test       [--msg= --host= --port= --list --help]
ecmd random-file    [--size= --file= --list= --help']
"

if [ -z "${1-}" ] ; then
  echo "$usage"; exit 1;
else
  cmd=$1
  shift
fi

stat=0

case $cmd in
  start|enstore-start)
    $ENSTORE_DIR/bin/enstore-start
    stat=$?
    ;;
  stop|enstore-stop)
    $ENSTORE_DIR/bin/enstore-stop
    stat=$?
    ;;

  encp)
    python $ENSTORE_DIR/src/encp.py                   --config_host $config_host --config_port=$config_port $@
    stat=$?
    ;;

  config|econ)
    python $ENSTORE_DIR/src/configuration_client.py   --config_host $config_host --config_port=$config_port $@
    stat=$?
    ;;

  fcc|bfid)
    python $ENSTORE_DIR/src/file_clerk_client.py      --config_host $config_host --config_port=$config_port $@
    stat=$?
    ;;

  vcc)
    python $ENSTORE_DIR/src/volume_clerk_client.py    --config_host $config_host --config_port=$config_port $@
    stat=$?
    ;;
  addvol)
    python $ENSTORE_DIR/src/volume_clerk_client.py    --config_host $config_host --config_port=$config_port --addvol $@
    stat=$?
    ;;
  delvol)
    python $ENSTORE_DIR/src/volume_clerk_client.py    --config_host $config_host --config_port=$config_port --delvol $@
    stat=$?
    ;;
  vols)
    python $ENSTORE_DIR/src/volume_clerk_client.py    --config_host $config_host --config_port=$config_port --vols $@
    stat=$?
    ;;
  vol)
    python $ENSTORE_DIR/src/volume_clerk_client.py    --config_host $config_host --config_port=$config_port --vol=$@
    stat=$?
    ;;

  lmc)
    python $ENSTORE_DIR/src/library_manager_client.py --config_host $config_host --config_port=$config_port $@
    stat=$?
    ;;

  mcc)
    python $ENSTORE_DIR/src/media_changer_client.py --config_host $config_host --config_port=$config_port $@
    stat=$?
    ;;


  pnfs)
    python $ENSTORE_DIR/src/pnfs.py $@
    stat=$?
    ;;


  rddt|rawdriver-test)
    python $ENSTORE_DIR/src/driver.py $@
    stat=$?
    ;;
  clbk|callback)
    python $ENSTORE_DIR/src/callback.py $@
    stat=$?
    ;;
  udpc|udp-test)
    python $ENSTORE_DIR/src/udp_client.py $@
    stat=$?
    ;;
  ranf|random-file)
    python $ENSTORE_DIR/src/ranfile.py $@
    stat=$?
    ;;

  help)
    echo "$usage"
    stat=$?
    ;;
  *)
    echo "$usage"
    stat=1

esac

exit $stat

