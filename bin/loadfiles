#!/bin/sh

#set -x

rm -f $ENSTORE_DIR/test/files.in

dpnfs=/pnfs/enstore/test1-`whoami`
if [ -d $dpnfs ] ; then
    rm -f $dpnfs/*
else
    mkdir $dpnfs
fi

if [ ! -d data ] ; then mkdir data ; fi
cd data
for f in * ; do
    f2=$dpnfs/`basename $f`
    python $ENSTORE_DIR/src/encp.py --list $f $f2
    echo $f2 >> $ENSTORE_DIR/test/files.in
done

