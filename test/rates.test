#!/bin/sh
set -u  # force better programming and ability to use check for not set
if [ "${1:-}" = "-x" ] ; then set -xv; shift; fi


if [ -z "${1-}" ] ; then
  drives="dm05 dm06 dm07 dm08"
else
  drives="$1"
fi

for i in $drives; do
 echo $i
 ($ENSTORE_DIR/bin/rates $i 2>/dev/null </dev/null| tee /raid/enstore/log/$i ) &
done
