OEMline=`$GREP '^OEM' /var/log/dmesg`
if [ -n "${OEMline:-}" ]; then
   for motherboard in SDS2 Lancewood SE7505VB2 N440BX S7501HG0 Unknown
   do
     if $ECHO $OEMline | $GREP $motherboard >/dev/null; then break; fi
   done
fi
if [ "${motherboard:-Unknown}" = Unknown ]; then
   model=`$AWK -F: '$1 ~ "model" && $2 !~ /[[:alpha:]]/ {print $2}' /proc/cpuinfo | $SORT -u`
   case `$EXPR $model` in
     11)	motherboard=SDS2	;;
     7 | 8)	motherboard=Lancewood	;;
     2)		motherboard=SE7505VB2	;;
     5)		motherboard=N440BX	;;
     *)		motherboard=Unknown	;;
   esac
fi
if [ $QUIET -ne 1 ]; then
   logit "Motherboard is $motherboard"
fi

if [ -e /PRODUCTION ]; then
   if [ $motherboard = Unknown ]; then
      msg="Unknown or undetermined motherboard"
      logit "msg"
      if [ $ALARM -eq 1 ]; then
	 enstore alarm --raise --severity "I" --root-error "$msg"
      fi
   fi
   set +u
   ipmiVersion=`ups list -cKversion ipmi | $SED -e s/\"//g -e s/\ //g`
   set -u
   if [ -z "${ipmiVersion:-}" ]; then
      msg="No current ups version of ipmi"
      logit "$msg"
      if [ $ALARM -eq 1 ]; then
	 enstore alarm --raise --severity "I" --root-error "$msg"
      fi
   elif [ $QUIET -ne 1 ]; then
      logit "Current ups version of ipmi is $ipmiVersion"
   fi
   case ${motherboard}_${ipmiVersion} in
     N440BX_devel | Lancewood_devel)
	IPMISRV=1
	;;
     SDS2_v1.5 | SE7505VB2_v1.5 | S7501HG0_v1.5)
	IPMISRV=0
	;;
   esac
   if [ -z "${IPMISRV:-}" ]; then
      msg="Current ups version of ipmi is incompatible with this motherboard"
      logit "$msg"
      if [ $ALARM -eq 1 ]; then
	 enstore alarm --raise --severity "A" --root-error "$msg"
      fi
      NOIPMI=1
   elif [ $QUIET -ne 1 ]; then
      logit "Current ups version of ipmi is compatible with this motherboard"
   fi
   # for now, ipmi seg faults on SE7505VB2 boards
   [ $motherboard = SE7505VB2 ] && NOIPMI=1
fi

# check that special jobs are listed in root crontab
if [ -r /var/spool/cron/root ]; then
   check_cron		"ntpset"
   if [ -e /PRODUCTION ]; then
      if [ ${IPMISRV:-0} -eq 1 ]; then
	 check_cron	"/home/enstore/ipmi/check_watchdog_reset.py"
      fi
      check_cron	"ekill -v -9 \"sdrread\|selread\|chip2\|Chip2\|netperf\|dog\|selbit\|selclear\|netstat\|Nodeinfo\|biterror\""
   fi
else
   logit "No root crontab"
fi

# check that hyperthreading is enabled on dual Xeon platforms
case `$AWK -F: '$1 ~ "model name" {print $2}' /proc/cpuinfo | $GREP -c "Xeon"` in
  0) ;;
  1) msg="BAD CONFIGURATION: Hyperthreading and one processor disabled"
     logit "$msg"
     if [ $ALARM -eq 1 ]; then
	enstore alarm --raise --severity "A" --root-error "$msg"
     fi
     ;;
  2) msg="BAD CONFIGURATION: Hyperthreading or one processor disabled"
     logit "$msg"
     if [ $ALARM -eq 1 ]; then
	enstore alarm --raise --severity "A" --root-error "$msg"
     fi
     ;;
  4) if [ $QUIET -ne 1 ]; then
	logit "Hyperthreading, both processors enabled, ok"
     fi
     ;;
esac

check_file	/etc/rc.d/rc.local	"boot_cleanup"
check_file	/etc/rc.d/rc.local	"ipmi_startup"
if [ $FLAVOR = 'Linux+2.4' ]; then
   check_cron	/etc/cron.d/sysstat	"/usr/lib/sa/sa1"	# system accounting
fi
check_cron	/etc/cron.d/netscan	"netscan -a -c -q"	# not so dumb, because we can run netscan manually, too
check_mode	/etc/cron.d/netscan	0644

for f in /{root,home/enstore}/.forward
do
  check_file	$f			"enstore-admin@fnal.gov"	0644
done

# verify ownership of enstore keytab directory and file
check_owner /local/ups/kt
check_owner /local/ups/kt/enstorekt

# verify ownership of log files
if [ -e /PRODUCTION ]; then
   check_owner ~enstore/`$HOSTNAME`.startup
   check_owner /`$HOSTNAME`.monitor_server.output	root
fi

# check that we don't have too many processes running
NPROC=`$LS -ld /proc/[1-9]* | $WC -l`
if   $ECHO $node | $GREP dca >/dev/null
then
    maxproc=300	 # disk cache
elif $ECHO $node | $GREP srv >/dev/null
then
    maxproc=200  # servers
elif $ECHO $node | $GREP mvr >/dev/null
then
    maxproc=100  # movers
else
    maxproc=100  # ???
fi

if [ $NPROC -ge $maxproc ]; then
   msg="$NPROC processes running. Way too many"
   logit "$msg"
   if [ $ALARM -eq 1 ]; then
     enstore alarm --raise --severity "A" --root-error "$msg"
   fi
elif [ $QUIET -ne 1 ]; then
   logit "$NPROC processes, ok"
fi

# count the number of pnfsd processes running on server nodes
if [ $SERVER -eq 1 ]; then
   case $node in
     *ensrv1|cmspnfs1)
       npnfsd=`$AWK -F = '/^pnfscopies=/ {print $NF}' /usr/etc/pnfsSetup`
       if [ "${npnfsd:-0}" -eq 0 ]; then
	  msg="pnfscopies is 0 or not defined in /usr/etc/pnfsSetup"
	  logit "$msg"
	  if [ $ALARM -eq 1 ]; then
	     enstore alarm --raise --severity "W" --root-error "$msg"
	  fi
	  npnfsd="-1"
       fi
       ;;
     *)
       npnfsd=0
       ;;
   esac

   NPROC=`$PS --no-headers -C pnfsd | $WC -l`
   if [ $NPROC -ne 0 -a $NPROC -ne "$npnfsd" ]; then
      msg="$NPROC pnfsd processes running. Should be $npnfsd"
      logit "$msg"
      if [ $ALARM -eq 1 ]; then
	enstore alarm --raise --severity "W" --root-error "$msg"
      fi
   elif [ $QUIET -ne 1 ]; then
      logit "$NPROC pnfsd processes, ok"
   fi
fi

today=`$DATE -I`

[ $SERVER -eq 1 ] && case $node in

  d0ensrv1|stkensrv1|cdfensrv1|cmspnfs1)
    # check all pnfs database sizes on srv1 nodes
    #  - but don't make too much noise about it
    if [ $QUIET -ne 1 -a -r /diska/pnfs/db/info/D-0000 ]; then
       # establish directory for database sizes
       dbfdir=/tmp/pnfs-db-sizes
       [ -d $dbfdir ] || $MKDIR $dbfdir
       # loop over all current enabled databases
       for db in `$GREP enabled /diska/pnfs/db/info/D-* | $CUT -d: -f6`
       do
	 dbname=`$BASENAME $db`
	 dbfile=$dbfdir/$dbname
	 if [ -d /diska/pnfs/db/data/base ]; then
	    dbpgid=`psql -t -A -U enstore template1 -c "select OID from pg_database where datname='$dbname'"`
	    dbsize=`$DU -bs /diska/pnfs/db/data/base/$dbpgid | $AWK '{print $1}'`
	 else
	    dbsize=`$LS -l $db | $AWK '{print $5}'`
	 fi
	 if [ -r $dbfile ]; then
	    if [ $dbsize -gt 1610612736 ] && [ $dbsize -gt $(<$dbfile) ]; then
	       msg="DATABASE TOO BIG: $dbname - $(( (dbsize+524288)>>20 )) MB, exceeds 1500 MB and is growing"
	       logit "$msg"
	       if [ $ALARM -eq 1 ]; then
		  enstore alarm --raise --severity "W" --root-error "$msg"
	       fi
	    else
	       logit "$dbname - $(( (dbsize+524288)>>20 )) MB, not too big or not growing, ok"
	    fi
	 fi
	 $ECHO $dbsize > $dbfile
       done
    fi
    # check for pnfs manager for dCache on production server
    if [ -e /PRODUCTION ]; then
       if [ `$PS --no-headers -C pnfs | $WC -l` -ne 1 ]; then
	  msg="ERROR: pnfs manager process not found"
	  logit "$msg"
	  if [ $ALARM -eq 1 ]; then
	     enstore alarm --raise --severity "W" --root-error "$msg"
	  fi
       elif [ $QUIET -ne 1 ]; then
	  logit "pnfs manager process found, ok"
       fi
    fi
    ;;

  d0ensrv2|stkensrv2|cdfensrv2)
    # check the largest of today's log files on srv2 nodes
    logline=`$LS -ls /diska/enstore-log/*-$today | $SORT -n | $TAIL -1`
    logtime=`$DATE +%s`
    logsize=`$ECHO $logline | $AWK '{print $6}'`
    logpath=`$ECHO $logline | $AWK '{print $10}'`
    logname=`$BASENAME $logpath`
    logfdir=/tmp/logfile-sizes
    logfile=$logfdir/$logname
    if [ $logsize -gt 1073741824 ]; then
       msg="LOG FILE TOO BIG: $logname - $(( (logsize+524288)>>20 )) MB, exceeds 1 GB"
       logit "$msg"
       if [ $ALARM -eq 1 ]; then
	  enstore alarm --raise --severity "W" --root-error "$msg"
       fi
    elif [ $logsize -gt 536870912 ]; then
       # establish directory for logfile sizes
       [ -d $logfdir ] || $MKDIR $logfdir
       let logszKB=$(( (logsize+512)>>10 ))
       if [ -r $logfile ]; then
	  let dt=logtime-`$DATE -r $logfile +%s`	# seconds
	  let ds=logszKB-$(<$logfile)			# KBytes
	  if [ $(( (`$DATE -d 2359 +%s`-logtime)*ds )) -gt $(( (1048576-logszKB)*dt )) ]; then
	     msg="LOG FILE GROWING TOO FAST: $logname will exceed 1 GB by midnight"
	     logit "$msg"
	     if [ $ALARM -eq 1 ]; then
		enstore alarm --raise --severity "W" --root-error "$msg"
	     fi
	  elif [ $QUIET -ne 1 ]; then
	     logit "$logname - $(( (logsize+524288)>>20 )) MB, not growing too fast, ok"
	  fi
       else
	  $ECHO $logszKB > $logfile
       fi
    elif [ $QUIET -ne 1 ]; then
       logit "$logname - $logsize not too big, ok"
    fi
    ;;

  d0ensrv4|stkensrv4|cdfensrv4)
    # check the time on fntt or fntt2
    if $ECHO $node | $EGREP '(d0|stk)en' >/dev/null; then
       SUN=fntt
    elif $ECHO $node | $GREP 'cdfen' >/dev/null; then
       SUN=fntt2
    fi
    dateFmt="(10#%S+60*(10#%M+60*(10#%H+24*10#%j)))"
    let delta=`$DATE +"$dateFmt"`-`su -c "/usr/bin/rsh -l acsss $SUN \"$DATE +$dateFmt\"" enstore`
    if [ $delta -lt 0 ]; then
       let delta=-delta
       off=fast
    else
       off=slow
    fi
    if [ $delta -gt 59 ]; then
       msg="Clock on $SUN is $off by $((delta/60)) minutes, $((delta%60)) seconds"
       logit "$msg"
       if [ $ALARM -eq 1 ]; then
	  enstore alarm --raise --severity "I" --root-error "$msg"
       fi
    elif [ $QUIET -ne 1 ]; then
       logit "Clock on $SUN is $off by $delta seconds, ok"
    fi
    ;;

esac

# check that db_deadlock and db_checkpoint are running if file or vol clerk running:
#if $PS axuwww|$GREP python|$GREP -v 'grep'|$EGREP '(file|volume)_clerk.py' >/dev/null; then
